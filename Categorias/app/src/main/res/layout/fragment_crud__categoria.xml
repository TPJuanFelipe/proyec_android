<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".crud_Categoria">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="410dp"
        android:layout_height="221dp"
        android:background="@drawable/btn_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edt_categorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="Categoria"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_id_categoria"
            android:layout_width="88dp"
            android:layout_height="38dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="Id categoria"
            android:inputType="number"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_categorias" />

        <EditText
            android:id="@+id/edt_identifi_admin"
            android:layout_width="88dp"
            android:layout_height="38dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="76dp"
            android:ems="10"
            android:hint="Codigo admin"
            android:inputType="number"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_categorias" />

        <ImageView
            android:id="@+id/iv_insertar_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/insert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_categorias" />

        <ImageView
            android:id="@+id/iv_modificar_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:src="@drawable/modifi"
            app:layout_constraintEnd_toStartOf="@+id/iv_eliminar_categoria"
            app:layout_constraintStart_toEndOf="@+id/iv_insertar_categoria"
            app:layout_constraintTop_toBottomOf="@+id/edt_categorias" />

        <ImageView
            android:id="@+id/iv_eliminar_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="70dp"
            android:src="@drawable/eliminar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_categorias" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>