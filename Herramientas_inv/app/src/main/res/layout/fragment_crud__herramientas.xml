<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".crud_Herramientas">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/caja"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_id_producto_herra" />

        <EditText
            android:id="@+id/edt_imagen_herra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Imagen"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/edt_nombre_herra" />

        <EditText
            android:id="@+id/edt_id_categoria_herra"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Id"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_cantidad_herra" />

        <EditText
            android:id="@+id/edt_cantidad_herra"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Cantidad"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_codigo_admin"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Codigo"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/edt_id_categoria_herra"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edt_id_categoria_herra"
            app:layout_constraintTop_toBottomOf="@+id/edt_id_categoria_herra" />

        <EditText
            android:id="@+id/edt_descrip_herra"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="DescripciÃ³n"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_imagen_herra" />

        <EditText
            android:id="@+id/edt_id_producto_herra"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="id producto"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_insertar_Herra"
            android:layout_width="51dp"
            android:layout_height="53dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/insert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_descrip_herra" />

        <ImageView
            android:id="@+id/btn_eliminar_Herra"
            android:layout_width="51dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="70dp"
            android:src="@drawable/eliminar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_descrip_herra" />

        <ImageView
            android:id="@+id/btn_modifi_Herra"
            android:layout_width="51dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/modifi"
            app:layout_constraintEnd_toStartOf="@+id/btn_eliminar_Herra"
            app:layout_constraintStart_toEndOf="@+id/btn_insertar_Herra"
            app:layout_constraintTop_toBottomOf="@+id/edt_descrip_herra" />

        <EditText
            android:id="@+id/edt_nombre_herra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            app:layout_constraintStart_toEndOf="@+id/edt_id_producto_herra"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>