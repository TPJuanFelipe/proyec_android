<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.proyect.inicioSesion_y_registro.menu_inv">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/top_background1" />

        <ImageView
            android:id="@+id/regresarInicio"
            android:layout_width="49dp"
            android:layout_height="43dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/btn_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/red" />

        <TextView
            android:id="@+id/usu_Perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Usuario"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/regresarInicio"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="@+id/regresarInicio"
            app:layout_constraintTop_toBottomOf="@+id/regresarInicio" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="316dp"
        android:layout_height="86dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_actividad_menu"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:onClick="ir_vista_actividad"
                    app:srcCompat="@drawable/perfil" />

                <TextView
                    android:id="@+id/txt_activi_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="actividad"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/herrramientas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_herra_menu"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:onClick="ir_menu_categoria"
                    app:srcCompat="@drawable/caja" />

                <TextView
                    android:id="@+id/txtHerrami"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Herramientas"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Config"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImaConfig"
                    android:layout_width="80dp"
                    android:layout_height="72dp"
                    app:srcCompat="@drawable/calen" />

                <TextView
                    android:id="@+id/txt_calenda_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calendario"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="304dp"
        android:layout_height="121dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>