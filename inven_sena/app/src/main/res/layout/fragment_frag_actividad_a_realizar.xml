<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.proyect.actividad.frag_actividad_a_realizar">


    <EditText
        android:id="@+id/edt_id_actividad_activi"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="id actividad"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_trabajo_reali_activi"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Trabajo realizado"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edt_id_actividad_activi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_id_actividad_activi"
        app:layout_constraintTop_toBottomOf="@+id/edt_id_actividad_activi" />

    <EditText
        android:id="@+id/edt_fecha_trabajado_activ"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Fecha actividad"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/edt_trabajo_reali_activi"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/edt_trabajo_reali_activi"
        app:layout_constraintTop_toBottomOf="@+id/edt_trabajo_reali_activi" />

    <EditText
        android:id="@+id/edt_id_trabajador_activi"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="id trabajador"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edt_fecha_trabajado_activ"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_fecha_trabajado_activ"
        app:layout_constraintTop_toBottomOf="@+id/edt_fecha_trabajado_activ" />

    <ImageView
        android:id="@+id/img_insert_actividad"
        android:layout_width="89dp"
        android:layout_height="71dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/insert"
        app:layout_constraintEnd_toEndOf="@+id/edt_id_trabajador_activi"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/edt_id_trabajador_activi"
        app:layout_constraintTop_toBottomOf="@+id/edt_id_trabajador_activi" />
</androidx.constraintlayout.widget.ConstraintLayout>